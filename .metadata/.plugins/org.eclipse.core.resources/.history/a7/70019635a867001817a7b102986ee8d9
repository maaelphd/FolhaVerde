package dao;

import java.io.IOException;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import com.mysql.jdbc.Statement;

import factory.ConnectionFactory;
import to.ProductTO;

public class ProductDAO {
	
	public ArrayList<ProductTO> listProduct() throws IOException {

		ProductTO productTO;
		ArrayList<ProductTO> arrayProductTO = new ArrayList<>();	
		
		String sqlSelect = "SELECT product_id, product_name, product_price, product_product_path_image, product_type from folhaverde.tb_product;";
		
		try (Connection conn = ConnectionFactory.obtemConexao();
				PreparedStatement stm = conn.prepareStatement(sqlSelect);) {
			try (ResultSet rs = stm.executeQuery();) {				
				while (rs.next()) {
					productTO = new ProductTO();
					productTO.setProdructId(rs.getInt("product_id"));
					productTO.setProductName(rs.getString("product_name"));
					productTO.setProdutPrice(rs.getDouble("product_price"));
					productTO.setProductPathImage(rs.getString("product_product_path_image"));
					productTO.setProductType(rs.getString("product_type"));
					arrayProductTO.add(productTO);
				}
			} catch (SQLException e) {
				e.printStackTrace();
				throw new IOException(e);
			}
			stm.close();
			conn.close();

		} catch (SQLException e) {
			e.printStackTrace();
			throw new IOException(e);
		}

		return arrayProductTO;
	}

}
